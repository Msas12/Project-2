<div class="card mb-3 mx-auto bg-dark">
    <div class="row g-0">
        <div class="col-md-4">
            <img class="w-100 h-100" src="{{img}}" alt="Photo of Available Dog">
        </div>
        <div class="col-md-8">
            <div class="card-header fs-3 text-light">
                {{dogName}}
            </div>
            <div class="card-body h-75 bg-dark">
                <p class="card-text text-light fs-4">
                    Age: {{age}}
                    <br>
                    Breed: {{breed}}
                    <br>
                    Sex: {{gender}}
                    <br>
                    Temperament: {{temper}}
                    <br>
                    Spayed/Neutered: {{spayed}}
                </p>
                {{#if adopted}}
                {{!-- <button type="button" class="btn btn-secondary mb-5 fs-5" data-id="{{id}}"
                    data-newAdoptionStatus="{{adopted}}">‚ù§
                </button> --}}
                {{else}}
                <button type="button" class="btn btn-secondary change-adopted mb-5 fs-5" data-id="{{id}}"
                    data-newAdoptionStatus="true">Adopt Now!
                </button>
                {{/if}}

                <div class="mt-5">
                    <p class="card-text text-light"><small class="fs-6">Last updated {{updatedAt}}</small></p>
                </div>
            </div>
        </div>
    </div>
</div>